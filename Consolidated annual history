    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "\n",
        "# Parameters\n",
        "loan_amount = 500000  # Total loan amount\n",
        "annual_interest_rate = 0.06  # 6% annual interest\n",
        "monthly_interest_rate = annual_interest_rate / 12\n",
        "loan_term_months = 12  # 1 year\n",
        "monthly_payment = loan_amount * monthly_interest_rate / (1 - (1 + monthly_interest_rate) ** -loan_term_months)\n",
        "\n",
        "# Initialize variables\n",
        "balance = loan_amount\n",
        "mortgage_data = []\n",
        "\n",
        "# Generate monthly data\n",
        "for month in range(1, loan_term_months + 1):\n",
        "    interest = balance * monthly_interest_rate\n",
        "    principal = monthly_payment - interest\n",
        "    ending_balance = balance - principal\n",
        "\n",
        "    mortgage_data.append({\n",
        "        \"Month\": f\"Month {month}\",\n",
        "        \"Beginning Balance\": round(balance, 2),\n",
        "        \"Monthly Payment\": round(monthly_payment, 2),\n",
        "        \"Interest Paid\": round(interest, 2),\n",
        "        \"Principal Paid\": round(principal, 2),\n",
        "        \"Ending Balance\": round(ending_balance, 2)\n",
        "    })\n",
        "\n",
        "    balance = ending_balance\n",
        "\n",
        "# Create DataFrame\n",
        "df = pd.DataFrame(mortgage_data)\n",
        "df.head(12)  # Display full year"
      ],
